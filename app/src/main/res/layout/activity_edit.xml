<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".Edit">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/a8"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_left"
            android:background="@color/white"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:clickable="true"
                        android:fontFamily="@font/oranienbaum"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp"
                        android:text="Expense"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:fontFamily="@font/oranienbaum"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp"
                        android:text="Income"
                        android:textSize="24sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:fontFamily="@font/oranienbaum"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp"
                        android:text="Transfer"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10dp"
                        android:text="Done" />

                    <LinearLayout
                        android:id="@+id/l2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/spinner1"
                                android:layout_width="261dp"
                                android:layout_height="36dp"
                                android:layout_marginLeft="10dp"
                                android:entries="@array/types3"
                                android:spinnerMode="dropdown" />

                            <TextView
                                android:id="@+id/tb2"
                                android:layout_width="144dp"
                                android:layout_height="34dp"
                                android:text="Source"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:visibility="gone" />


                            <TextView
                                android:id="@+id/tb1"
                                android:layout_width="144dp"
                                android:layout_height="wrap_content"
                                android:text="Payment Method"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="59dp"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/spinner2"
                                android:layout_width="261dp"
                                android:layout_height="36dp"
                                android:layout_marginLeft="10dp"
                                android:entries="@array/types"
                                android:spinnerMode="dropdown" />

                            <Spinner
                                android:id="@+id/spinner3"
                                android:layout_width="261dp"
                                android:layout_height="36dp"
                                android:layout_marginLeft="10dp"
                                android:entries="@array/types2"
                                android:spinnerMode="dropdown"
                                android:visibility="gone" />

                            <Spinner
                                android:id="@+id/spinner4"
                                android:layout_width="261dp"
                                android:layout_height="36dp"
                                android:layout_marginLeft="10dp"
                                android:entries="@array/types3"
                                android:spinnerMode="dropdown"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tb4"
                                android:layout_width="144dp"
                                android:layout_height="34dp"
                                android:text="Target"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:visibility="gone" />


                            <TextView
                                android:id="@+id/tb3"
                                android:layout_width="144dp"
                                android:layout_height="wrap_content"
                                android:text="Category"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/editText3"
                                android:layout_width="281dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:hint="Enter Amount Here"
                                android:inputType="numberDecimal" />

                            <TextView
                                android:layout_width="145dp"
                                android:layout_height="wrap_content"
                                android:text="Amount"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/editText4"
                                android:layout_width="281dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:hint="Write Description here" />

                            <TextView
                                android:layout_width="145dp"
                                android:layout_height="wrap_content"
                                android:text="Description"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editText1"
                            android:layout_width="184dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:editable="false"
                            android:ems="10"
                            android:hint="Enter Date" />

                        <EditText
                            android:id="@+id/editText2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/editText1"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:editable="false"
                            android:ems="10"
                            android:hint="Enter Time" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/edit_adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-2995472604015192/6822224450"></com.google.android.gms.ads.AdView>


</LinearLayout>



